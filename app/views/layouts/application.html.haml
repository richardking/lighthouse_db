    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

    %meta{ charset: "utf-8" }
    %meta{ author: "" }
    %meta{ description: "" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
